generator client{
    provider = "prisma-client-js"
}

datasource db{
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model User{
    id Int @id @default(autoincrement())
    name String
    email String @unique
    password String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
}

model Item {
    id Int @id @default(autoincrement())
    name String
    price Int
    description String
    image String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
}